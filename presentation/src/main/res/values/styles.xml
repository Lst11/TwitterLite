<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarStyle">@style/TwitterLiteActionBar</item>

    </style>

    <style name="TwitterLiteActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="actionMenuTextColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="text_regular">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_bold">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
